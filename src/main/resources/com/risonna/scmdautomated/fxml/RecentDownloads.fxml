<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="10" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" >
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label styleClass="header-label" text="Recent Downloads"/>
    <ListView fx:id="recentDownloadsList" VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="clearAllButton" text="Clear All" />
        <Button fx:id="closeButton" text="Close" />
    </HBox>
    <stylesheets>
        <URL value="@../styles/recent_downloads.css"/>
    </stylesheets>
</VBox>